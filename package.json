{
  "name": "mystops",
  "version": "0.0.0",
  "description": "MyStops",
  "author": "Wyatt Baldwin",
  "license": "UNLICENSED",
  "private": true,
  "keywords": [
    "transit"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wylee/mystops.git"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "cookie-parser": "^1.4.4",
    "core-decorators": "^0.20.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "node-sass": "^4.14.1",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "uglify-js": "^3.6.9"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/promise.prototype.finally": "^2.0.3",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "autoprefixer": "^9.7.2",
    "axios": "^0.21.1",
    "eslint": "^7.1.0",
    "material-design-icons": "^3.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "ol": "^5.3.3",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-scripts-ts": "^3.1.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.7.2"
  },
  "bin": {
    "mystops": "bin/mystops.js"
  },
  "scripts": {
    "start": "npm-run-all -p start:backend start:frontend",
    "start:backend": "DEBUG=mystops:* nodemon -w config -w db -w server -w trimet",
    "start:frontend": "npm run css:compile:development && npm-run-all -p css:watch start:react",
    "start:react": "react-scripts-ts start",
    "frontend:build": "npm-run-all css:build js:build",
    "css:watch": "node-sass --source-map true src/ -o src/ --watch --recursive",
    "css:build": "npm-run-all css:compile css:autoprefix",
    "css:compile": "node-sass src/ -o src/",
    "css:compile:development": "node-sass --source-map true src/ -o src/",
    "css:autoprefix": "postcss 'src/**/*.css' --replace --use autoprefixer",
    "js:build": "react-scripts-ts build",
    "dbshell": "PGPASSWORD=mystops psql --user mystops --host localhost",
    "load-data": "node db loadData",
    "unload-data": "node db unloadData",
    "reload-data": "node db unloadData && node db loadData",
    "migrate": "node db migrate",
    "get-stops": "node scripts/get-stops.js",
    "deploy": "node scripts/deploy.js",
    "dump-stops": "curl 'http://localhost:8000/api/stops/?format=geojson&bbox=-180,-90,180,90'",
    "lint": "eslint ."
  },
  "main": "server/main.js",
  "proxy": "http://localhost:8000/",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "firefox esr",
    "not ie < 9"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
